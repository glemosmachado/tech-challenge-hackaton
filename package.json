{
  "name": "postech-hackathon",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace services/api run dev",
    "dev:mobile": "npm --workspace apps/mobile run start",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "lint": "npm -ws run lint"
  }
}